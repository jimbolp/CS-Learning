
@{
    ViewBag.Title = "Files";
}

<form>
    Path: <input type="text" name="path" />
    <input type="submit" />
</form>

<h2>Listing Files in @ViewBag.path</h2>



@model List<string>

<div>
    <a href="\Home\Files\?path=@ViewBag.ParentFolder">Parent Folder</a>
</div>

    @foreach (var file in Model)
    {
        <div>
            @Html.ActionLink(file, "Files", new { path = file})
        </div>        
    }



